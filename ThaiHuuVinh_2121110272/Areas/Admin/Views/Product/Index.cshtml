    <div class="container mt-4">
        <!-- Form tìm kiếm sản phẩm -->
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2>Tất cả sản phẩm</h2>
            <div style="flex: 1; display: flex; justify-content: center;">
                @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "search-form" }))
                {
                    <div class="search-container">
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control search-input", placeholder = "Tìm kiếm sản phẩm..." })
                        <button type="submit" class="search-button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                }
            </div>
            <p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm sản phẩm
                </a>
            </p>
        </div>

        <!-- Display message if no products found -->
        @if (!Model.Any())
        {
            <p>Không tìm thấy sản phẩm nào.</p>
        }
        else
        {
            <!-- Danh sách sản phẩm -->
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Danh mục</th>
                        <th>Mô tả ngắn</th>
                        <th>Giá sản phẩm</th>
                        <th>Giá khuyến mãi</th>
                        <th>Loại sản phẩm</th>
                        <th>Tiêu đề sản phẩm</th>
                        <th>Thương hiệu</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Avatar))
                                {
                                    <img src="~/Content/images/items/@item.Avatar" alt="@item.Name" class="img-thumbnail" style="width:100px;">
                                }
                                else
                                {
                                    <img src="~/Content/images/items/default.png" alt="No Image" class="img-thumbnail" style="width:100px;">
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                            <td>@Html.DisplayFor(modelItem => item.ShortDes)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.PriceDiscount)</td>
                            <td>@Html.DisplayFor(modelItem => item.TypeId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                            <td>@Html.DisplayFor(modelItem => item.BrandId)</td>
                            <td>
                                <div style="display: flex; gap: 5px;">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm" style="background-color: #FFCCCC">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <form action="@Url.Action("Delete", new { id = item.Id })" method="post" style="display:inline;">
                                        <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');" class="btn btn-danger btn-sm" >
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <!-- Phân trang -->
        <div class="text-center paged-list-container">
            <p>Trang @(Model.PageNumber) của @Model.PageCount</p>
            <ul class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a href="@Url.Action("Index", new { page = Model.PageNumber - 1, SearchString = ViewBag.CurrentFilter })" class="page-link">&laquo;</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">&laquo;</span>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a href="@Url.Action("Index", new { page = i, SearchString = ViewBag.CurrentFilter })" class="page-link">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a href="@Url.Action("Index", new { page = Model.PageNumber + 1, SearchString = ViewBag.CurrentFilter })" class="page-link">&raquo;</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">&raquo;</span>
                    </li>
                }
            </ul>
        </div>
    </div>

</body>

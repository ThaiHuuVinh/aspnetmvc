                }

                .paged-list-container .pagination a,
                .paged-list-container .pagination span {
                    position: relative;
                    float: left;
                    padding: 5px 15px;
                    margin-left: -1px;
                    line-height: 1.5;
                    color: #007bff;
                    text-decoration: none;
                    background-color: #fff;
                    border-right: 1px inset #ced4da;
                    
                }

                    .paged-list-container .pagination a:hover,
                    .paged-list-container .pagination span.active {
                        background-color: #007bff;
                        color: #fff;
                        border-color: #007bff;
                    }

                .paged-list-container .pagination .disabled a,
                .paged-list-container .pagination .disabled span {
                    color: #6c757d;
                    cursor: not-allowed;
                }

        /* CSS chung cho trang */
